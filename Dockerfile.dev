# Dockerfile.dev
FROM node:22-alpine

WORKDIR /app

# Install pnpm and dependencies
COPY package.json pnpm-lock.yaml ./
RUN npm install -g pnpm && pnpm install

# Copy source files
COPY . .

# Expose Vite default port
EXPOSE 5173

# Run the dev server on all network interfaces
CMD ["pnpm", "run", "dev", "--host", "0.0.0.0"]

